<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="action_district" model="ir.actions.act_window">
        <field name="name">Distrito</field>
        <field name="res_model">district.toratto</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_company': True}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Crear Nuevo Distrito
          </p><p>
            Odoo helps you to easily track all activities related to a customer.
          </p>
        </field>
    </record>

    <!-- MAIN MENU -->
    <menuitem id="settings_main_menu" name="Ajustes" parent="toratto_root"/>
    <!-- SINGLE MENU ITEMS -->
    <menuitem id="district_menu" name="Distritos" parent="settings_main_menu" action="action_district" sequence="1"/>
    <menuitem id="project_type_menu" name="Tipos de Proyectos" parent="settings_main_menu" action="action_project_type" sequence="2"/>
    <menuitem id="construction_state_menu" name="Estados de Construccion" parent="settings_main_menu" action="action_construction_state" sequence="8"/>
    <menuitem id="unit_type_menu" name="Tipos de Unidad" parent="settings_main_menu" action="action_unit_type" sequence="2"/>
    <menuitem id="funder_type_menu" name="Tipo de Financiamiento" parent="settings_main_menu" action="action_funder_type" sequence="5"/>
    <menuitem id="funder_menu" name="Entidad Bancaria" parent="settings_main_menu" action="action_funder" sequence="5"/>

</odoo>
