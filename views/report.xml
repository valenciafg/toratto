<odoo>
    <data>
        <report
            id="report_custom"
            string="Reporte Personalizado"
            model="sale.order"
            report_type="qweb-pdf"
            name="toratto.report_custom_template"
            print_report_name="'Cotizacion - %s' % (object.name)"
        />
        <template id="report_custom_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="header">
                            PRUEBA HEADER
                        </div>
                        <div class="page">
                            <h1>MI REPORTE</h1>
                            <p>personalizado</p>
                            <!--DATOS DE LA PROFORMA-->
                            <span t-field="o.name"/>
                            <span t-field="o.date_order" t-options='{"format": "dd/MM/yyyy"}'/>
                            <!--DATOS DEL ASESOR-->
                            <!--
                            <span t-field="o.user_id.partner_id.name"/>
                            <span t-field="o.user_id.partner_id.email"/>
                            <span t-field="o.user_id.partner_id.phone"/>
                            <span t-field="o.user_id.partner_id.mobile"/>
                            -->
                            <div style="border: 1px solid black;padding:5px;">
                                <div class="row">
                                    <span>INFORMACION DEL EJECUTIVO DE VENTAS</span>
                                </div>
                                <div class="row">
                                    <span>ASESOR:</span>
                                    <span t-field="o.user_id.partner_id.name"/>
                                    <span>EMAIL:</span>
                                    <span t-field="o.user_id.partner_id.email"/>
                                </div>
                                <div class="row">
                                    <span>TELEFONO:</span>
                                    <span t-field="o.user_id.partner_id.phone"/>
                                    <span>CELULAR:</span>
                                    <span t-field="o.user_id.partner_id.mobile"/>
                                </div>
                            </div>
                            <!--DATOS DEL CLIENTE-->
                            <!--
                            <span t-field="o.partner_id.name"/>
                            <span t-field="o.partner_id.vat"/>
                            <span t-field="o.partner_id.l10n_latam_identification_type_id" />
                            <span t-field="o.partner_id.email"/>
                            <span t-field="o.partner_id.phone"/>
                            <span t-field="o.partner_id.mobile"/>
                            -->
                            <div style="border: 1px solid black;padding:5px;">
                                <div class="row">
                                    <span>INFORMACION DEL CLIENTE</span>
                                </div>
                                <div class="row">
                                    <span>SEÑOR(A):</span>
                                    <span t-field="o.partner_id.name"/>
                                </div>
                                <div class="row">
                                    <span>EMAIL:</span>
                                    <span t-field="o.partner_id.email"/>
                                </div>
                                <div class="row">
                                    <span>Nº DOC:</span>
                                    <span t-field="o.partner_id.vat"/>
                                    <span>TELEFONOS:</span>
                                    <span t-field="o.partner_id.phone"/>
                                    <span t-field="o.partner_id.mobile"/>
                                </div>
                            </div>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Inmueble y Numero</th>
                                        <th scope="col">Piso</th>
                                        <th scope="col">Vista</th>
                                        <th scope="col">Area Techada</th>
                                        <th scope="col">Area no Techada</th>
                                        <th scope="col">Area Total</th>
                                        <th scope="col">Precio de Venta</th>
                                    </tr>
                                </thead>
                                <tbody class="table-striped">
                                    <t t-foreach="o.order_line" t-as="line">
                                        <t t-set="prd" t-value="line.product_id"/>
                                        <t t-set="total_area" t-value="prd.covered_area + prd.free_area"/>
                                        <tr>
                                            <td><span t-field="line.name"/></td>
                                            <td><span t-field="prd.floor_number"/></td>
                                            <td><span t-field="prd.building_view"/></td>
                                            <td><span t-field="prd.covered_area"/></td>
                                            <td><span t-field="prd.free_area"/></td>
                                            <td><span t-esc="total_area"/></td>
                                            <td><span t-field="line.price_total"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                                </table>
                            <!--
                            <div class="row">
                                <div class="col-xs-3">
                                xxxx
                                </div>
                            </div>
                            <div class="row zero_min_height">
                                <div class="col-xs-12">
                                    <div style="border-bottom: 1px solid black;">xxxx</div>
                                </div>
                            </div>
                            -->
                            <div class="row">
                                <div class="col-xs-3" style="border-top: 1px solid black;">
                                    <span t-field="o.partner_id.name"/>
                                </div>
                                <div class="col-xs-3" style="border-top: 1px solid black;">
                                    <span t-field="o.user_id.partner_id.name"/>
                                </div>
                            </div>
                        </div>
                        <div class="footer">
                            <small>Mi footer</small>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>