<odoo>
    <data>
        <report
            id="report_custom"
            string="Reporte Personalizado"
            model="sale.order"
            report_type="qweb-pdf"
            name="toratto.report_custom_template"
        />
        <template id="report_custom_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="header">
                            PRUEBA HEADER
                        </div>
                        <div class="page">
                            <h1>MI REPORTE</h1>
                            <p>personalizado</p>
                            <!--DATOS DE LA PROFORMA-->
                            <span t-field="o.name"/>
                            <span t-field="o.date_order" t-options='{"format": "dd/MM/yyyy"}'/>
                            <!--DATOS DEL ASESOR-->
                            <span t-field="o.user_id.partner_id.name"/>
                            <span t-field="o.user_id.partner_id.email"/>
                            <span t-field="o.user_id.partner_id.phone"/>
                            <span t-field="o.user_id.partner_id.mobile"/>
                            <!--DATOS DEL CLIENTE-->
                            <span t-field="o.partner_id.name"/>
                            <span t-field="o.partner_id.vat"/>
                            <span t-field="o.partner_id.l10n_latam_identification_type_id" />
                            <span t-field="o.partner_id.email"/>
                            <span t-field="o.partner_id.phone"/>
                            <span t-field="o.partner_id.mobile"/>
                            <div class="row">
                                <div class="col-xs-3">
                                xxxx
                                </div>
                            </div>
                            <div class="row zero_min_height">
                                <div class="col-xs-12">
                                    <div style="border-bottom: 1px solid black;">xxxx</div>
                                </div>
                            </div>
                            <div class="container">
                            <div class="row">
                                <div class="col-xs-2"> </div>
                                <div class="col-xs-3" style="border-top: 1px solid black;">
                                    <span t-field="o.partner_id.name"/>
                                </div>
                                <div class="col-xs-2" />
                                <div class="col-xs-3" style="border-top: 1px solid black;">
                                    <span t-field="o.user_id.partner_id.name"/>
                                </div>
                                <div class="col-xs-2" />
                            </div>
                            </div>
                        </div>
                        <div class="footer">
                            <small>Mi footer</small>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>