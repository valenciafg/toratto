<odoo>
    <data>
        <report
            id="report_custom"
            string="Reporte Personalizado"
            model="sale.order"
            report_type="qweb-pdf"
            name="toratto.report_custom_template"
            print_report_name="'Cotizacion - %s' % (object.name)"
        />
        <template id="report_custom_template">
            <xpath expr="//div[@class='header']" position="replace">
                <div class="header">
                    <!--DATOS DE LA PROFORMA-->
                    <t t-foreach="docs" t-as="o">
                        <div class="row">
                            <div style="width:300px;text-align:left;">
                                <img t-attf-src="data:image/*;base64,{{ o.company_id.logo }}" style="align:left; width:150px;height:70px;"/>
                            </div>
                            <div style="width:300px;text-align:center">
                                <ul style="list-style-type:none;">
                                    <li><h4>PROFORMA</h4></li>
                                    <li><h4>Nº <span t-field="o.name"/></h4></li>
                                    <li>
                                        <span t-field="o.date_order" t-options='{"format": "dd/MM/yyyy HH:mm:ss"}'/>
                                    </li>
                                </ul>
                            </div>
                            <div style="width:300px;text-align:right;">
                                <t t-set="index" t-value="0" />
                                <t t-foreach="o.order_line" t-as="line">
                                    <t t-if="index == 0">
                                        <t t-set="prd" t-value="line.product_id"/> 
                                        <img t-attf-src="data:image/*;base64,{{ prd.proyect_id.logo2 }}" style="align:left; width:85px;height:85px;"/>
                                    </t>
                                    <t t-set="index" t-value="index + 1" />
                                </t>
                            </div>
                        </div>
                    </t>
                </div>
            </xpath>
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page" style="font-size: 12px !important;">
                            <!--DATOS DEL ASESOR-->
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th colspan="4" scope="col"><b>INFORMACION DEL EJECUTIVO DE VENTAS</b></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><b><span>ASESOR:</span></b></td>
                                        <td><span t-field="o.user_id.partner_id.name"/></td>
                                        <td><b><span>EMAIL:</span></b></td>
                                        <td><span t-field="o.user_id.partner_id.email"/></td>
                                    </tr>
                                    <tr>
                                        <td><b><span>TELEFONO:</span></b></td>
                                        <td><span t-field="o.user_id.partner_id.phone"/></td>
                                        <td><b><span>CELULAR:</span></b></td>
                                        <td><span t-field="o.user_id.partner_id.mobile"/></td>
                                    </tr>
                                </tbody>
                            </table>
                            <!--DATOS DEL CLIENTE-->
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th colspan="4" scope="col"><b>INFORMACION DEL CLIENTE</b></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="2"><b><span>SEÑOR(A):</span></b></td>
                                        <td colspan="2"><span t-field="o.partner_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td colspan="2"><b><span>EMAIL:</span></b></td>
                                        <td colspan="2"><span t-field="o.partner_id.email"/></td>
                                    </tr>
                                    <tr>
                                        <td><b><span>Nº DOC:</span></b></td>
                                        <td>
                                            <span t-field="o.partner_id.l10n_latam_identification_type_id" />
                                            <span t-field="o.partner_id.vat"/>
                                        </td>
                                        <td><b><span>TELEFONOS:</span></b></td>
                                        <td>
                                            <span t-field="o.partner_id.phone"/>
                                            <span t-field="o.partner_id.mobile"/>
                                        </td>
                                    </tr>
                                    <t t-if="o.client_order_ref">
                                    <tr>
                                        <td><b><span>REFERIDO:</span></b></td>
                                        <td>
                                            <span t-field="o.client_order_ref.l10n_latam_identification_type_id" />
                                            <span t-field="o.client_order_ref.vat"/>
                                            <span t-field="o.client_order_ref.name"/>
                                        </td>
                                        <td><b><span>REF. TELEFONOS:</span></b></td>
                                        <td>
                                            <span t-field="o.client_order_ref.phone"/>
                                            <span t-field="o.client_order_ref.mobile"/>
                                        </td>
                                    </tr>
                                    </t>
                                </tbody>
                            </table>
                            <t t-set="sum_subtotal" t-value="0"/>
                            <t t-set="sum_separation_mount" t-value="0"/>
                            <t t-set="sum_discount_mount" t-value="0"/>
                            <t t-set="sum_initial_fee" t-value="0"/>
                            <t t-set="sum_taxes" t-value="0"/>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th scope="col">Inmueble y Numero</th>
                                        <th scope="col">Piso</th>
                                        <th scope="col">Vista</th>
                                        <th scope="col">Area Techada</th>
                                        <th scope="col">Area no Techada</th>
                                        <th scope="col">Area Total</th>
                                        <th scope="col">Precio de Venta</th>
                                    </tr>
                                </thead>
                                <tbody class="table-striped">
                                    <t t-foreach="o.order_line" t-as="line">
                                        <t t-set="currency_type_symbol" t-value="line.currency_id"/>
                                        <t t-set="prd" t-value="line.product_id"/>
                                        <t t-set="total_area" t-value="prd.covered_area + prd.free_area"/>
                                        <t t-set="sum_subtotal" t-value="sum_subtotal + line.price_unit"/>
                                        <t t-set="sum_initial_fee" t-value="sum_initial_fee + ((line.price_unit * line.initial_fee)/100)"/>
                                        <t t-set="sum_separation_mount" t-value="sum_separation_mount + line.amount_of_separation"/>
                                        <t t-set="sum_discount_mount" t-value="sum_discount_mount + prd.discount"/>
                                        <t t-set="sum_taxes" t-value="sum_taxes + line.price_tax"/>
                                        <!--
                                        <tr>
                                            <td colspan="6">CARACTERISTICAS UNIDADES INMOBILIARIAS</td>
                                        </tr>
                                        -->
                                        <tr>
                                            <td><span t-field="line.name"/></td>
                                            <td><span t-field="prd.floor_number"/></td>
                                            <td><span t-field="prd.building_view"/></td>
                                            <td><span t-field="prd.covered_area"/></td>
                                            <td><span t-field="prd.free_area"/></td>
                                            <td><span t-esc="total_area"/></td>
                                            <!-- td><span t-field="line.price_total"/></td -->
                                            <td><span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": line.currency_id}'/></td>
                                        </tr>
                                    </t>
                                </tbody>
                                <t t-set="total_mount" t-value="(sum_subtotal - sum_separation_mount - sum_initial_fee - sum_discount_mount) + sum_taxes"/>
                                <t t-set="prd_project_name" t-value=""/>
                                <t t-foreach="o.order_line" t-as="line">
                                    <t t-set="prd" t-value="line.product_id"/>
                                    <t t-set="prd_project_name" t-value="prd.proyect_id.name"/>
                                </t>
                                <tfoot>
                                    <tr>
                                        <td colspan="6" align="right">SUBTOTAL:</td>
                                        <td><span t-esc="sum_subtotal" t-options="{'widget': 'monetary', 'display_currency': o.pricelist_id.currency_id}"/></td>
                                    </tr>
                                    <tr>
                                        <td colspan="6" align="right">SEPARACION:</td>
                                        <td><span t-esc="sum_separation_mount" t-options="{'widget': 'monetary', 'display_currency': o.pricelist_id.currency_id}"/></td>
                                    </tr>
                                    <tr>
                                        <td colspan="6" align="right">CUOTA INICIAL:</td>
                                        <td><span t-esc="sum_initial_fee" t-options="{'widget': 'monetary', 'display_currency': o.pricelist_id.currency_id}"/></td>
                                    </tr>
                                    <tr>
                                        <td colspan="6" align="right">DESCUENTO:</td>
                                        <td><span t-esc="sum_discount_mount" t-options="{'widget': 'monetary', 'display_currency': o.pricelist_id.currency_id}"/></td>
                                    </tr>
                                    <tr>
                                        <td colspan="6" align="right">IMPUESTO:</td>
                                        <td><span t-esc="sum_taxes" t-options="{'widget': 'monetary', 'display_currency': o.pricelist_id.currency_id}"/></td>
                                    </tr>
                                    <tr>
                                        <td colspan="6" align="right">TOTAL A FINANCIAR:</td>
                                        <td><span t-esc="total_mount" t-options="{'widget': 'monetary', 'display_currency': o.pricelist_id.currency_id}"/></td>
                                    </tr>
                                </tfoot>
                            </table>
                            <!-- TERMINOS Y CONDICIONES -->
                            <t t-foreach="docs" t-as="o">
                            <div style="font-size: 10px !important;">
                                <ul>
                                    <li>
                                    La presente proforma es solo informa va y No significa separación de los inmuebles mencionados en la misma a favor del cliente ni una oferta de términos.
                                    </li>
                                    <li>
                                    Precios y Stock sujetos a variación según disponibilidad.
                                    </li>
                                    <li>
                                    Si decide solicitar crédito con otra en dad bancaria, tendrá que asumir el costo de la carta fianza y las implicancias de estas.
                                    </li>
                                    <li>
                                    Los datos personales que entregue a <b><span t-field="o.company_id.name"/></b>, serán almacenados en el banco de datos denominado "prospectos" de tularidad <b><t t-esc="prd_project_name"/></b>.
                                    </li>
                                    <li>
                                    El tratamiento que realizará <b><t t-esc="prd_project_name"/></b>, consiste en conservar, registrar, organizar, almacenar, consultar, extraer y u lizar mis datos personales para la realización de prospección comercial y envío de publicidad para ofrecer sus proyectos inmobiliarios.
                                    </li>
                                    <li>
                                    El titular de los datos personales puede ejercer su derecho de acceso, rec ficación, cancelación y oposición en los términos dispuestos en la Ley N° 29733 - Ley de Protección de Datos Personales y Su Reglamento aprobado por D.S. N° 003-2013-JUS, debiendo comunicar a <b><span t-field="o.company_id.name"/></b> su
decisión por cualquier medio.
                                    </li>
                                    <li>
                                    De acuerdo con lo indicado, declaro que otorgo mi consen miento para que <b><span t-field="o.company_id.name"/></b> u lice mis datos personales de acuerdo a lo indicado en el presente documento.
                                    </li>
                                    <li>
                                    Por otro lado autorizo que mis datos personales de contacto sean transferidos a <b><span t-field="o.company_id.name"/></b> para recibir publicidad relacionada a los proyectos inmobiliarios que está ofrece.
                                    </li>
                                    <li>
                                    (*) Sujeto a culminación de preventa y emisión de licencia de construcción fecha definitiva: 20 meses después de iniciada la construcción.
                                    </li>
                                    <li>
                                    <b>EL DESCUENTO REFERIDO EN LA PRESENTE PROFORMA APLICA PARA LA MODALIDAD DE _______________________________________</b>
                                    </li>
                                </ul>
                            </div>
                            </t>
                        </div>
                        <!-- FIRMAS -->
                        <br/><br/><br/>
                        <div class="row">
                            <div style="width:150px"></div>
                            <div class="col-xs-3" style="border-top: 1px solid black;width:300px;text-align:center">
                                <span t-field="o.partner_id.name"/>
                            </div>
                            <div style="width:100px"></div>
                            <div class="col-xs-3" style="border-top: 1px solid black;width:300px;text-align:center">
                                <span t-field="o.user_id.partner_id.name"/>
                            </div>
                            <div style="width:150px"></div>
                        </div>
                        <!--
                        <div class="footer">
                        </div>
                        -->
                        
                        <t t-foreach="o.order_line" t-as="line">
                            <p style="page-break-after:always">
                                <t t-set="prd" t-value="line.product_id"/> 
                                <img t-attf-src="data:image/*;base64,{{ prd.plans.logo }}" style="align:center; max-width:900px;max-height:1366px;"/>
                            </p>
                        </t>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
